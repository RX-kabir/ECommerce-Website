@model Category

<style>
    .category-edit-card {
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 8px 32px rgba(60,60,120,0.18);
        padding: 2.2rem 2.5rem 2rem 2.5rem;
        margin-top: 50px;
        margin-bottom: 50px;
        transition: box-shadow 0.2s;
    }

        .category-edit-card:hover {
            box-shadow: 0 12px 40px rgba(70,90,170,0.24);
        }

    .form-label {
        font-weight: 600;
        letter-spacing: 0.5px;
        color: #455a64;
    }

    .form-control:focus {
        border-color: #7568ff;
        box-shadow: 0 0 0 0.08rem #b39ddb50;
    }

    .btn-primary {
        background: linear-gradient(90deg, #7568ff 55%, #2bb8ca 100%);
        border: none;
        font-weight: 700;
        letter-spacing: 0.5px;
        box-shadow: 0 2px 8px rgba(60,60,120,0.10);
        transition: background 0.2s;
    }

        .btn-primary:hover {
            background: linear-gradient(98deg, #4738d0 70%, #199baa 100%);
        }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-5">
            <div class="category-edit-card">
                <h2 class="text-center text-uppercase mb-4" style="letter-spacing:4px; color:#2bb8ca;">
                    Update&nbsp;/&nbsp;Edit Category
                </h2>
                <form method="post" autocomplete="off">
                    <input type="hidden"
                           name="category_id"
                           value="@Model.category_id" />
                    <div class="mb-3">
                        <label class="form-label" for="category_name">
                            Category Name
                        </label>
                        <input type="text"
                               name="category_name"
                               id="category_name"
                               class="form-control"
                               placeholder="Enter category name"
                               value="@Model.category_name"

                               required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100 py-2">
                        Update Category
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
