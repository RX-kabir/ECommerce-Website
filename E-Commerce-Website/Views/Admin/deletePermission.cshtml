@model Customer

<div class="container-fluid px-4">
    <h2 class="mt-4 mb-4 text-center text-uppercase text-danger" style="letter-spacing: 4px;">
        Are You Sure You Want to Delete This Customer?
    </h2>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow border-danger mb-4">
            <div class="card-header bg-danger text-white text-center">
                <h5 class="mb-0">Customer Details</h5>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>ID:</strong> @Model.customer_id</li>
                    <li class="list-group-item"><strong>Name:</strong> @Model.customer_name</li>
                    <li class="list-group-item"><strong>Phone:</strong> @Model.customer_phone</li>
                    <li class="list-group-item"><strong>Email:</strong> @Model.customer_email</li>
                    <li class="list-group-item"><strong>Password:</strong> @Model.customer_password</li>
                    <li class="list-group-item"><strong>Gender:</strong> @Model.customer_gender</li>
                    <li class="list-group-item"><strong>Country:</strong> @Model.customer_country</li>
                    <li class="list-group-item"><strong>City:</strong> @Model.customer_city</li>
                    <li class="list-group-item"><strong>Address:</strong> @Model.customer_address</li>
                </ul>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <a href="@Url.Action("deleteCustomer", "Admin", new { id = Model.customer_id })" class="btn btn-danger px-4">
                    <i class="fas fa-trash-alt"></i> Confirm Delete
                </a>
                <a href="@Url.Action("fetchCustomer", "Admin")" class="btn btn-secondary px-4">
                    <i class="fas fa-arrow-left"></i> Cancel
                </a>
            </div>
        </div>
    </div>
</div>
