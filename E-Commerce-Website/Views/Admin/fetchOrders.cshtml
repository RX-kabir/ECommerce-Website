@model List<Order>

<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">Order History</h2>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-striped text-center mt-3">
                <thead class="table-dark">
                    <tr>
                        <th>Order ID</th>
                        <th>Customer Name</th>
                        <th>Total Price</th>
                        <th>Order Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.order_id</td>
                            <td>@order.customers.customer_name</td>
                            <td>@order.total_price.ToString("C")</td>
                            <td>@order.order_date.ToString("dd MMM yyyy - hh:mm tt")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
